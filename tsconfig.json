{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./server/dist",
    "types": [],
  },
  "include": ["./server/src/**/*.ts", "./server/src/**/*.tsx"],
  "exclude": ["**/node_modules", "**/*.spec.ts"]
}
